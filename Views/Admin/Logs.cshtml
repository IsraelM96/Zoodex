@using Zoodex.Models
@{
    ViewBag.Title = "Logs";
}
@{ List<LogModel> logs = (List<LogModel>)ViewBag.Logs; }
<div class="container-fluid pt-5 mt-5">
    <div class="container my-5">
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>User</th>
                            <th>Status</th>
                            <th>Result</th>
                            <th>Hostname</th>
                            <th>IP</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (LogModel log in logs)
                        {
                        <tr>
                            <td>@log.Id</td>
                            <td>@log.User</td>
                            @if (log.Status == "Success")
                            {
                                <td><span class="badge rounded-pill bg-success">@log.Status</span></td>
                            }
                            else
                            {
                                <td><span class="badge rounded-pill bg-danger">@log.Status</span></td>
                            }
                            <td>@log.Result</td>
                            <td>@log.Hostname</td>
                            <td>@log.IP</td>
                            <td>@log.Date</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

        });
    </script>
}