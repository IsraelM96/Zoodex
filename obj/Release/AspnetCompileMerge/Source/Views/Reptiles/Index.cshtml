
@{
    ViewBag.Title = "Reptiles";
}

<div class="row justify-content-center my-5 py-5 mx-0">
    <div class="col-10 mt-5">
        <table class="table table-striped table-bordered shadow-sm"  id="reptiles">
            <thead>
                <tr>
                    <th>Specie</th>
                    <th>Subspecie</th>
                    <th>CommonName</th>
                    <th>Family</th>
                    <th>LastUpdated</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetFullReptiles", "Reptiles")",
                data: {},
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    $("#reptiles").DataTable({
                        responsive: true,
                        "data": data,
                        "columns": [
                            { "data": "Specie" },
                            { "data": "Subspecie" },
                            { "data": "CommonName" },
                            { "data": "Family" },
                            { "data": "LastUpdated" }]
                    });
                }
            });
        });
    </script>
}  